<%- include('../../partials/header.ejs') %> <%- include('../../partials/navbar.ejs') %>
<div class="container d-auto justify-content-center text-center mt-5">
  <h2 class="mt-3 text-center pb-1">Categorias:</h2>
  <a class="btn btn-outline-dark" href="/admin/categories/new">Nova categoria</a>
  <table class="table mt-3">
    <thead class="table-bordered">
      <tr class="table-active">
        <th>Id</th>
        <th>Título</th>
        <th>Slug</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(category => { %>
      <tr>
        <th><%= category.id %></th>
        <th><%= category.title %></th>
        <th><%= category.slug %></th>
        <th>
          <button class="btn btn-outline-dark"><a href="/admin/categories/edit/<%= category.id %>">Editar</a></button>
          <form method="POST" action="/categories/delete" class="d-inline" onsubmit="confirmDeletion(event, this)">
            <input type="hidden" name="id" value="<%= category.id %>">
            <button class="btn btn-outline-light">Deletar</button>
          </form>
        </th>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../../partials/footer.ejs') %>


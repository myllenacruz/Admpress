<%- include('../../partials/header.ejs') %> 
<%- include('../../partials/navbar.ejs') %>
<div class="container d-auto justify-content-center text-center mt-5">
  <h2 class="mt-3 text-center pb-1">Usuários:</h2>
  <a class="btn btn-outline-dark" href="/admin/users/create">Novo usuário</a>
  <table class="table mt-3">
    <thead class="table-bordered">
      <tr class="table-active">
        <th>Id</th>
        <th>E-mail</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../../partials/footer.ejs') %>

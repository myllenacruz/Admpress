<!DOCTYPE html>
<%- include('../../partials/header.ejs') %> <%-
include('../../partials/navbar.ejs') %>

<div class="container d-auto justify-content-center text-center mt-5">
  <h2 class="pb-2">Novo artigo:</h2>

  <form class="form form-group" method="POST" action="articles/save">
    <input
      class="form-control input-sm w-50 mx-auto"
      type="text"
      name="title"
      placeholder="Qual o tÃ­tulo do artigo?"
    />
    <textarea
      name="body"
      id="article"
      cols="50"
      rows="10"
      class="m-auto form-control"
      placeholder="Escreva aqui"
    ></textarea>
    <h3 class="mt-3">Categoria:</h3>
    <select
      name="category"
      class="form-select form-select-lg mb-3"
      aria-label=".form-select-lg example"
    >
      <% categories.forEach((category) => { %>
      <option value="<%= category.id %>"><%= category.title %></option>
      <% }) %>
    </select>
  </form>
  <button class="btn btn-outline-dark btn-sm col-xs-2">Cadastrar</button>
</div>

<%- include('../../partials/footer.ejs') %>
<script>
  tinymce.init({
    selector: '#article',
    puglin: [
      'advlist autolink link image lists print preview searchreplace fullscreen',
    ],
  })
</script>

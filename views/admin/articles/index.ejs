<%- include('../../partials/header.ejs') %> 
<%- include('../../partials/navbar.ejs') %>
<div class="container d-auto justify-content-center text-center mt-5">
  <h2 class="mt-3 text-center pb-1">Artigos:</h2>
  <a class="btn btn-outline-dark" href="/admin/articles/new">Novo artigo</a>
  <table class="table mt-3">
    <thead class="table-bordered">
      <tr class="table-active">
        <th>Id</th>
        <th>Título</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% articles.forEach(article => { %>
      <tr>  
        <th><%= article.id %></th>
        <th><%= article.title %></th>
        <th><%= article.category.title %></th>
        <th>
          <button class="btn btn-outline-light">Deletar</button>
          <form method="POST" action="/articles/delete" class="d-inline" onsubmit="confirmDeletion(event, this)">
          <input type="hidden" name="id" value="<%= article.id %>"> 
          </form>
        </th>
      </tr>
      <% }) %>
    </tbody>
  </table>

</div>
<%- include('../../partials/footer.ejs') %>
